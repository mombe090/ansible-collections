api:
  dashboard: true
  insecure: true
  debug: true
entryPoints:
  http:
    address: ':80'
    http:
      redirections:
        entryPoint:
          to: https
          scheme: https
  https:
    address: ':443'
serversTransport:
  insecureSkipVerify: true
providers:
  docker:
    endpoint: 'unix:///var/run/docker.sock'
    exposedByDefault: false
    network: proxy
  file:
    directory: {{ traefik_dir }}/conf.d/
    watch: true
certificatesResolvers:
  cloudflare:
    acme:
      email: '{{ cloudflare_email }}'
      storage: /var/traefik/certs/acme.json
      caServer: '{{ cloudflare_ca_server }}'
      dnsChallenge:
        provider: cloudflare
        resolvers:
          - '1.1.1.1:53'
