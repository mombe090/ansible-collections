{
  description = "Home Manager configuration for {{ ansible_user }}";

  inputs = {
    nixpkgs.url = "github:NixOS/nixpkgs/nixos-unstable";
    home-manager = {
      url = "github:nix-community/home-manager";
      inputs.nixpkgs.follows = "nixpkgs";
    };
  };

  outputs = { nixpkgs, home-manager, ... }: {
    homeConfigurations."{{ nix_home_manager_user }}@{{ nix_machine_type }}" = home-manager.lib.homeManagerConfiguration {
      pkgs = nixpkgs.legacyPackages.{{ nix_machine_type | replace('-', '_') }};

      modules = [
        ./home.nix
      ];
    };
  };
}
