# Gitea Environment Configuration
# Database configuration
POSTGRES_HOST={{ postgres_host }}
POSTGRES_PORT={{ postgres_port | default('5432') }}
POSTGRES_DB={{ gitea_db_name | default('gitea') }}
POSTGRES_USER={{ username }}
POSTGRES_PASSWORD={{ password }}

# Gitea configuration
GITEA_VERSION={{ gitea_version | default('1.24.5') }}
GITEA_DOMAIN={{ domain }}
GITEA_SSH_PORT=2222
GITEA_HTTP_PORT=3001
GITEA_ROOT_URL=https://gitea.{{ domain }}

# Backup configuration
GITEA_BACKUP_DIR={{ gitea_backup_dir | default(gitea_dir + '/backups') }}
