# Gitea Runner Environment Configuration
# Gitea instance configuration
GITEA_INSTANCE_URL=https://gitea.{{ domain }}
GITEA_RUNNER_REGISTRATION_TOKEN={{ registration_token }}

# Runner configuration
GITEA_RUNNER_NAME={{ gitea_runner_name | default('homelab-runner') }}
GITEA_RUNNER_LABELS={{ gitea_runner_labels | default('ubuntu-latest:docker://catthehacker/ubuntu:act-latest,self-hosted:host') }}
GITEA_RUNNER_LOG_LEVEL={{ gitea_runner_log_level | default('info') }}

# Docker configuration
RUNNER_VERSION={{ gitea_runner_version | default('nightly') }}
RUNNER_DATA_DIR={{ gitea_runner_dir | default('/opt/gitea-runner') }}
