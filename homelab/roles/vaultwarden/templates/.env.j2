# Vaultwarden Environment Configuration
# Database configuration
POSTGRES_HOST={{ postgres_host }}
POSTGRES_PORT={{ postgres_port | default('5432') }}
POSTGRES_DB={{ vaultwarden_db_name | default('vaultwarden') }}
POSTGRES_USER={{ username }}
POSTGRES_PASSWORD={{ password }}
POSTGRES_PASSWORD_ENCODED={{ password | urlencode }}

# Vaultwarden configuration
VAULTWARDEN_VERSION={{ vaultwarden_version | default('1.32.7') }}
VAULTWARDEN_DOMAIN=https://vaultwarden.{{ domain }}
VAULTWARDEN_ADMIN_TOKEN={{ vaultwarden_admin_token }}

# Feature flags
VAULTWARDEN_SIGNUPS_ALLOWED={{ vaultwarden_signups_allowed | lower }}
VAULTWARDEN_INVITATIONS_ALLOWED={{ vaultwarden_invitations_allowed | lower }}
VAULTWARDEN_EMERGENCY_ACCESS_ALLOWED={{ vaultwarden_emergency_access_allowed | lower }}
VAULTWARDEN_SENDS_ALLOWED={{ vaultwarden_sends_allowed | lower }}
VAULTWARDEN_WEB_VAULT_ENABLED={{ vaultwarden_web_vault_enabled | lower }}
VAULTWARDEN_WEBSOCKET_ENABLED={{ vaultwarden_websocket_enabled | lower }}

# Port configuration
VAULTWARDEN_HTTP_PORT=8080
VAULTWARDEN_WEBSOCKET_PORT=3012
